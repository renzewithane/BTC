<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeyondTheClassroom"
        tools:targetApi="31">

        <activity
            android:name=".MainMenuActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".DevNavigationActivity"
            android:exported="true"
            android:theme="@style/Theme.BeyondTheClassroom"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AssessmentsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".StoriesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".UserAvatarActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".LevelBoardActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".OperationsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>
